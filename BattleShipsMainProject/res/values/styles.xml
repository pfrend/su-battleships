<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<style name="MenuButton">
		<item name="android:background">@drawable/menu_button_selector</item>
		<item name="android:typeface">serif</item>
		<item name="android:textColor">#FF201000</item>
		<item name="android:textSize">26sp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:layout_marginBottom">10dp</item>
	</style>
	
	<style name="MenuLogo">
		<item name="android:src">@drawable/logo</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:layout_marginTop">15dp</item>
		<item name="android:layout_marginBottom">30dp</item>
	</style>
	
	<style name="About">
		<item name="android:typeface">serif</item>
		<item name="android:textColor">#FF201000</item>
		<item name="android:textSize">20sp</item>
		<item name="android:gravity">top|center</item>
		<item name="android:lineSpacingExtra">4dp</item>
		<item name="android:layout_width">260dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:layout_marginTop">-15dp</item>
		<item name="android:layout_marginBottom">15dp</item>
		<item name="android:padding">20dp</item>
		<item name="android:background">@drawable/map_plane</item>
	</style>
	
	<style name="GameInfoLabel">
		<item name="android:typeface">serif</item>
		<item name="android:textColor">#FFccbfa7</item>
		<item name="android:textSize">16sp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:paddingLeft">5dp</item>
	</style>
</resources>
